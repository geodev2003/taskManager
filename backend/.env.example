# Database Configuration
DB_SERVER=localhost
DB_PORT=1433
DB_USER=sa
DB_PASSWORD=your_password_here
DB_NAME=taskManager

# JWT Configuration
# Generate strong random strings for production
# Example: openssl rand -base64 32
# Note: JWT_SECRET is used by auth middleware, JWT_ACCESS_SECRET is used for token generation
# They should be the same value
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_ACCESS_SECRET=your_jwt_secret_key_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_secret_key_here_change_in_production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3000

# Environment
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
